							height="24" font="1" normaltextcolor="white" textpadding="10,1,1,1" name="20_font_index"/>
				</Combo>
				<Control name="splitline" bkcolor="splitline_hor_level4" width="1" margin="1,0,4,0"/>
			</HBox>
			<HBox name="range_box" width="auto" visible="false">
				<Label normaltextcolor="lightcolor" font="11" valign="center" margin="2,0,4,0" textid="STRID_CAPTUREFORM_BRUSH_BLURRINESS" />
